<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production security configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Allow only your API domains -->
        <domain includeSubdomains="true">{{.APIHost}}</domain>
        {{if .AdditionalAPIHosts}}
        {{range .AdditionalAPIHosts}}
        <domain includeSubdomains="true">{{.}}</domain>
        {{end}}
        {{end}}
        
        <!-- Pin certificates for enhanced security -->
        <pin-set expiration="2025-12-31">
            <!-- Replace with your actual certificate pins -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        
        <!-- Trust only system CAs -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Debug cofffiguratioff (offly for debug builds) --> // SECURITY FIX: Disabled debug info (use env var for dev)
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
    
    <!-- Base configuration -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>