server:
  host: "0.0.0.0"
  port: 8080
  mode: "debug"
  read_timeout: 30s
  write_timeout: 30s
  idle_timeout: 60s

database:
  host: "localhost"
  port: 5432
  user: "{{.Name}}_dev"
  password: "dev_password"
  dbname: "{{.Name}}_development"
  sslmode: "disable"
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: 300s

redis:
  host: "localhost"
  port: 6379
  password: ""
  db: 0
  pool_size: 10
  min_idle_conns: 5

jwt:
  secret: "development-jwt-secret-key-change-in-production"
  expiry_time: 24 # hours
  refresh_expiry_time: 168 # hours (7 days)

cors:
  allowed_origins:
    - "http://localhost:3000"
    - "http://localhost:3001"
    - "http://localhost:3002"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "Origin"
    - "Content-Type"
    - "Accept"
    - "Authorization"
    - "X-Requested-With"
  allow_credentials: true
  max_age: 86400

logging:
  level: "debug"
  format: "json"
  output: "stdout"
  file_path: "logs/{{.Name}}-dev.log"
  max_size: 100 # MB
  max_backups: 5
  max_age: 30 # days
  compress: true

rate_limiting:
  enabled: true
  requests_per_minute: 100
  burst: 20

security:
  bcrypt_cost: 10
  session_timeout: 3600 # seconds
  max_login_attempts: 20
  lockout_duration: 300 # seconds (5 minutes)
  password_min_length: 8
  password_require_special: false
  password_require_numbers: true
  password_require_uppercase: false
  password_require_lowercase: true
  jwt_refresh_rotation: false
  csrf_protection: false
  rate_limit_enabled: true
  rate_limit_requests_per_minute: 200
  secure_headers_enabled: true
  max_login_attempts: 5
  lockout_duration: 900 # seconds (15 minutes)

monitoring:
  metrics_enabled: true
  health_check_enabled: true
  profiling_enabled: true

features:
  user_registration: true
  email_verification: false
  password_reset: true
  admin_panel: true