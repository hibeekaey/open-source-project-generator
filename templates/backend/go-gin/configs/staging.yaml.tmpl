server:
  host: "0.0.0.0"
  port: 8080
  mode: "release"
  read_timeout: 30s
  write_timeout: 30s
  idle_timeout: 60s

database:
  host: "${DB_HOST}"
  port: ${DB_PORT}
  user: "${DB_USER}"
  password: "${DB_PASSWORD}"
  dbname: "${DB_NAME}"
  sslmode: "require"
  max_open_conns: 50
  max_idle_conns: 5
  conn_max_lifetime: 1800s

redis:
  host: "${REDIS_HOST}"
  port: ${REDIS_PORT}
  password: "${REDIS_PASSWORD}"
  db: ${REDIS_DB}
  pool_size: 25
  min_idle_conns: 5

jwt:
  secret: "${JWT_SECRET}"
  expiry_time: 2 # hours
  refresh_expiry_time: 48 # hours (2 days)

cors:
  allowed_origins:
    - "${FRONTEND_URL}"
    - "${ADMIN_URL}"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "Origin"
    - "Content-Type"
    - "Accept"
    - "Authorization"
    - "X-Requested-With"
  allow_credentials: true
  max_age: 86400

logging:
  level: "debug"
  format: "json"
  output: "both"
  file_path: "/var/log/{{.Name}}/staging.log"
  max_size: 200 # MB
  max_backups: 5
  max_age: 30 # days
  compress: true

rate_limiting:
  enabled: true
  requests_per_minute: 80
  burst: 15

security:
  bcrypt_cost: 11
  session_timeout: 2700 # seconds (45 minutes)
  max_login_attempts: 4
  lockout_duration: 1200 # seconds (20 minutes)

monitoring:
  metrics_enabled: true
  health_check_enabled: true
  profiling_enabled: true

features:
  user_registration: true
  email_verification: true
  password_reset: true
  admin_panel: true