server:
  host: "0.0.0.0"
  port: 8080
  mode: "release"
  read_timeout: 30s
  write_timeout: 30s
  idle_timeout: 120s

database:
  host: "${DB_HOST}"
  port: ${DB_PORT}
  user: "${DB_USER}"
  password: "${DB_PASSWORD}"
  dbname: "${DB_NAME}"
  sslmode: "require"
  max_open_conns: 100
  max_idle_conns: 10
  conn_max_lifetime: 3600s

redis:
  host: "${REDIS_HOST}"
  port: ${REDIS_PORT}
  password: "${REDIS_PASSWORD}"
  db: ${REDIS_DB}
  pool_size: 50
  min_idle_conns: 10

jwt:
  secret: "${JWT_SECRET}"
  expiry_time: 1 # hours
  refresh_expiry_time: 24 # hours (1 day)

cors:
  allowed_origins:
    - "${FRONTEND_URL}"
    - "${ADMIN_URL}"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "Origin"
    - "Content-Type"
    - "Accept"
    - "Authorization"
    - "X-Requested-With"
  allow_credentials: true
  max_age: 86400

logging:
  level: "info"
  format: "json"
  output: "file"
  file_path: "/var/log/{{.Name}}/app.log"
  max_size: 500 # MB
  max_backups: 10
  max_age: 90 # days
  compress: true

rate_limiting:
  enabled: true
  requests_per_minute: 60
  burst: 10

security:
  bcrypt_cost: 12
  session_timeout: 1800 # seconds (30 minutes)
  max_login_attempts: 5
  lockout_duration: 900 # seconds (15 minutes)
  password_min_length: 12
  password_require_special: true
  password_require_numbers: true
  password_require_uppercase: true
  password_require_lowercase: true
  jwt_refresh_rotation: true
  csrf_protection: true
  rate_limit_enabled: true
  rate_limit_requests_per_minute: 60
  secure_headers_enabled: true
  max_login_attempts: 3
  lockout_duration: 1800 # seconds (30 minutes)

monitoring:
  metrics_enabled: true
  health_check_enabled: true
  profiling_enabled: false

features:
  user_registration: true
  email_verification: true
  password_reset: true
  admin_panel: true