    commit-message:
      prefix: "chore(docker)"
      include: "scope"
    labels:
      - "dependencies"
      - "docker"
      - "infrastructure"

  {{if .Components.Infrastructure.Terraform}}
  # Enable version updates for Terraform
  - package-ecosystem: "terraform"
    directory: "/Deploy/terraform"
    schedule:
      interval: "weekly"
      day: "wednesday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
      - "{{.Organization}}/maintainers"
    assignees:
