version: 2
updates:
  # Enable version updates for npm (Frontend applications)
  {{if .Components.Frontend.MainApp}}
  - package-ecosystem: "npm"
    directory: "/App"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 10
    reviewers:
      - "{{.Organization}}/maintainers"
    assignees:
      - "{{.Organization}}/maintainers"
    commit-message:
      prefix: "chore(app)"
      include: "scope"
    labels:
      - "dependencies"
      - "app"
    ignore:
      # Ignore major version updates for React (manual review required)
      - dependency-name: "react"
        update-types: ["version-update:semver-major"]
      - dependency-name: "react-dom"
        update-types: ["version-update:semver-major"]
      # Ignore major version updates for Next.js (manual review required)
      - dependency-name: "next"
        update-types: ["version-update:semver-major"]
  {{end}}

  {{if .Components.Frontend.Home}}
  - package-ecosystem: "npm"
    directory: "/Home"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 10
    reviewers:
      - "{{.Organization}}/maintainers"
    assignees:
      - "{{.Organization}}/maintainers"
    commit-message:
      prefix: "chore(home)"
      include: "scope"
    labels:
      - "dependencies"
      - "home"
    ignore:
      - dependency-name: "react"
        update-types: ["version-update:semver-major"]
      - dependency-name: "react-dom"
        update-types: ["version-update:semver-major"]
      - dependency-name: "next"
        update-types: ["version-update:semver-major"]
  {{end}}

  {{if .Components.Frontend.Admin}}
  - package-ecosystem: "npm"
    directory: "/Admin"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 10
    reviewers:
      - "{{.Organization}}/maintainers"
    assignees:
      - "{{.Organization}}/maintainers"
    commit-message:
      prefix: "chore(admin)"
      include: "scope"
    labels:
      - "dependencies"
      - "admin"
    ignore:
      - dependency-name: "react"
        update-types: ["version-update:semver-major"]
      - dependency-name: "react-dom"
        update-types: ["version-update:semver-major"]
      - dependency-name: "next"
        update-types: ["version-update:semver-major"]
  {{end}}

  # Enable version updates for Go modules (Backend)
  - package-ecosystem: "gomod"
    directory: "/"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
      - "{{.Organization}}/maintainers"
    assignees:
      - "{{.Organization}}/maintainers"
    commit-message:
      prefix: "chore(backend)"
      include: "scope"
    labels:
      - "dependencies"
      - "backend"
      - "go"
    ignore:
      # Ignore major version updates for critical dependencies
      - dependency-name: "github.com/gin-gonic/gin"
        update-types: ["version-update:semver-major"]
      - dependency-name: "gorm.io/gorm"
        update-types: ["version-update:semver-major"]

  {{if .Components.Mobile.Android}}
  # Enable version updates for Gradle (Android)
  - package-ecosystem: "gradle"
    directory: "/Mobile/Android"
    schedule:
      interval: "weekly"
      day: "tuesday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
      - "{{.Organization}}/maintainers"
    assignees:
      - "{{.Organization}}/maintainers"
    commit-message:
      prefix: "chore(android)"
      include: "scope"
    labels:
      - "dependencies"
      - "android"
      - "mobile"
    ignore:
      # Ignore major Android Gradle Plugin updates
      - dependency-name: "com.android.tools.build:gradle"
        update-types: ["version-update:semver-major"]
      # Ignore major Kotlin updates
      - dependency-name: "org.jetbrains.kotlin:kotlin-gradle-plugin"
        update-types: ["version-update:semver-major"]
  {{end}}

  {{if .Components.Mobile.IOS}}
  # Enable version updates for CocoaPods (iOS)
  - package-ecosystem: "cocoapods"
    directory: "/Mobile/iOS"
    schedule:
      interval: "weekly"
      day: "tuesday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
