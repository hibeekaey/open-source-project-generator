    commit-message:
      prefix: "chore(ios)"
      include: "scope"
    labels:
      - "dependencies"
      - "ios"
      - "mobile"
  {{end}}

  # Enable version updates for Docker
  - package-ecosystem: "docker"
    directory: "/"
    schedule:
      interval: "weekly"
      day: "wednesday"
      time: "09:00"
    open-pull-requests-limit: 5
    reviewers:
